<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="1dp" 
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/bubble_image" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:paddingLeft="4dp"
		android:visibility="gone"/>
	
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:background="#FFFFFF"
		android:orientation="vertical" >
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<TextView android:id="@+id/bubble_title" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="12dp"
				android:maxEms="12"
				android:layout_gravity="center|center"
				android:text="Title" />

	    </LinearLayout> 
	    

	</LinearLayout>
	
	<LinearLayout 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:orientation="vertical"
	>
			
	<LinearLayout android:orientation="vertical"

	android:layout_width="wrap_content"
	android:layout_height="wrap_content">


		<LinearLayout android:id="@+id/bubble_main"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:orientation="horizontal"
				android:layout_gravity="center|center"
				 >
		<ImageView android:id="@+id/top_arrow"
		    android:background="@layout/arrow_top"
			android:layout_width="20dip"
			android:layout_height="10dip"
			android:layout_gravity="center_horizontal"
			android:visibility="gone"
			 />
				<TextView android:id="@+id/bubble_description" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textSize="12dp"
					android:maxEms="10"
					android:padding="5dp"
					android:layout_gravity="top|left"
					android:text="Description" />
				<TextView android:id="@+id/bubble_subdescription" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textSize="12dp"
					android:maxEms="10"
					android:padding="5dp"
					android:layout_gravity="center|center"
					android:visibility="gone" />
	    </LinearLayout>

	</LinearLayout>
		<ImageView 
		    android:id="@+id/arrow_nor"
		    android:src="@layout/arrow_down"
		    android:layout_width="20dip"
			android:layout_height="20dip"
			android:layout_gravity="center_horizontal" />
		</LinearLayout>	
</LinearLayout>

